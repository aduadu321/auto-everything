# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# MASTER DATABASE (Tenant Registry)
# ============================================
MASTER_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sms_master

# ============================================
# TENANT DATABASE (Template URL)
# ============================================
TENANT_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tenant_template

# ============================================
# REDIS (Queues & Caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=change-this-to-a-super-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d

# ============================================
# SMS PROVIDERS
# ============================================
# Twilio - Primary International Provider
# Register at: https://www.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SMSLink.ro - Romania's #1 SMS Provider (Fallback for RO numbers)
# Register at: https://www.smslink.ro/inregistrare/
SMSLINK_CONNECTION_ID=your-connection-id
SMSLINK_PASSWORD=your-password
SMSLINK_SENDER_ID=SMSNotify

# ============================================
# STRIPE (Payments & Billing)
# ============================================
# Register at: https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_STARTER=price_starter_id
STRIPE_PRICE_BUSINESS=price_business_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_id

# ============================================
# RATE LIMITING
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100
